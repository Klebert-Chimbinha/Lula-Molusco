//Deixa a fita de Led Respirar atraves da medição de Millis
#include <FastLED.h>

#define NUM_LEDS 16
#define LED_PIN 5
#define LED_TYPE    WS2812
unsigned long int respira = 0;
unsigned long int expira = 0;
int r = 0;
int e = 0;

CRGB leds[NUM_LEDS];
void setup () {
  FastLED.addLeds<LED_TYPE, LED_PIN, GRB>(leds, NUM_LEDS);
  FastLED.setBrightness(250);
  }
void loop() { 
  if(r < NUM_LEDS){
    if(millis() - respira >= 100){
      leds[r] = CRGB::Purple;
      FastLED.show();
      respira += 100;
      r += 1;
      }
    }
    if(r == NUM_LEDS){
      if(millis() - respira >= 100){
        leds[e] = CRGB::Red;
        FastLED.show();
        respira += 100;
        e += 1;
        }
      }
      if(r == NUM_LEDS and e == NUM_LEDS){
        r = 0;
        e = 0;
      }
  }


