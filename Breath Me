//Deixa a fita de Led Respirar atraves da medição de Millis
#include <FastLED.h>

#define NUM_LEDS 16
#define LED_PIN 5
#define LED_TYPE    WS2812
int respiro = 0;

CRGB leds[NUM_LEDS];
void setup () {
  FastLED.addLeds<LED_TYPE, LED_PIN, GRB>(leds, NUM_LEDS);
  FastLED.setBrightness(250);
  }
void loop() { 
for(int i=0; i <= NUM_LEDS; i++){
  if(millis() - respiro >= 1000){
  leds[i] = CRGB::Red;
  FastLED.show();
  respiro = millis();
  }
  leds[i] = CRGB::Black;
  FastLED.show();
  }
  }
